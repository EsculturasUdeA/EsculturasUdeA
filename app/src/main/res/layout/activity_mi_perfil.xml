<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corp.poopapps.afinal.miPerfil">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/avatar"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/usuario"
        android:textColor="@color/beige" />

        <TextView
            android:layout_below="@+id/Titulo"
            android:layout_margin="5dp"
            android:id="@+id/perfilusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#004d40"/>

    <Button
        android:onClick="ClickEditarPerfil"
        android:id="@+id/bEditarPerfil"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/perfilusuario"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/editarperfil"
        android:textColor="@color/whitesmoke"
        android:textStyle="bold" />

    <Button
        android:onClick="ClickCerrarSesion"
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/CerrarSesion"
        android:textColor="@color/whitesmoke"
        android:textStyle="bold" />

</RelativeLayout>
